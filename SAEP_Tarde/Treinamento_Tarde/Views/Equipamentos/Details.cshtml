@model Treinamento_Tarde.Models.Equipamentos

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Equipamentos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Equipamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Equipamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
    </dl>
</div>
<div>
    
    <form action="@Url.Action("Comentar")" method="post">

        <input class="form-control" type="text" name="Comentario" />

        <input value="@ViewBag.Perfil" class="form-control" type="hidden" name="IdPerfis" />
        <input value="@Html.DisplayFor(model => model.Id)" class="form-control" type="hidden" name="IdEquipamentos" />

        <button type="submit" class="btn btn-dark">Comentar</button>

    </form>

    <div class="comentarios">
        @if(ViewBag.Comentarios != null)
        {
            @foreach (var item in ViewBag.Comentarios)
            {
                <p>@item.Comentario</p>
            }
        }

    </div>

</div>
